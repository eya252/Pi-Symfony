{% extends 'back.html.twig' %}


{% block body %}

            <div class="box_general padding_bottom">
                <div class="header_box version_2">
                    <h2><i></i>New Evenement</h2>
                </div>
                {{ form_start(form, {'attr': {'class': 'forms-sample'}}) }}
                <div class="form-group">
                    <label>Titre</label>
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="form-group">
                    <label>Lieu</label>
                    {{ form_widget(form.lieu, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.lieu) }}
                </div>


                <div class="form-group">
                    <label>Description</label>
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group">
                    <label>Nombre De Place</label>
                    {{ form_widget(form.nbrPlace, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.nbrPlace) }}
                </div>
                <div class="form-group">
                    <label>Image</label>
                    {{ form_widget(form.file, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.file) }}
                </div>
                <div class="form-group" style="text-align: center">
                    <label>Date Debut</label>
                    {{ form_widget(form.dateDe, { 'attr': {'class': ''} }) }}
                    {{ form_errors(form.dateDe) }}
                </div>
                <div class="form-group" style="text-align: center">
                    <label>Date Fin</label>
                    {{ form_widget(form.dateFi, { 'attr': {'class': ''} }) }}
                    {{ form_errors(form.dateFi) }}<br>
                </div>
                <div style="text-align: center">
                <input type="submit" value="Enregistrer" class="btn btn-secondary"  formnovalidate/>
                </div>
                {{ form_end(form) }}

            </div>

{% endblock %}
