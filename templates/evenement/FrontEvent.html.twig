{% extends 'base.html.twig' %}

{% block body %}

    <div class="bg_gray">
        <div class="container margin_60_40">
            <div class="main_title center">
                <span><em></em></span>
                <h2>Nous Evenements</h2>
            </div>
            <!-- /main_title -->
            <div class="owl-carousel owl-theme categories_carousel">
                {% for event in evenements %}
                <div class="item">
                    <a href="{{ path('evenement_details', {'id': event.id}) }}">
                        <img src="{{ asset('Upload/')}}{{ event.image }}" width="100"/> <br>
                        <h3> Nom :{{ event.nom }}</h3>
                        <small>Lieu :{{ event.lieu }}</small>
                    </a>
                </div>
                {% endfor %}
            </div>
            <!-- /carousel -->
        </div>
        <!-- /container -->
    </div>
{% endblock %}